{
  "manifest_version": 2,

  "name": "Hide Intercom Popup",
  "description": "This extension allows the user to hide the intercom popup on SaaS websites.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/script.js"],
      "run_at": "document_idle"
    }
  ],

  "page_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}
